.row
  .col-lg-6.offset-lg-3
    .form-group
      = form_tag search_path, method: 'get', class: 'search-form' do
        = text_field_tag :q, params[:q], class: 'form-control form-control-lg search-field', placeholder: 'Search company or name'

        = submit_tag 'Search', name: nil, class: 'search-button'

.row
  .col-lg-6.offset-lg-3
    - unless params[:q].blank?
      - if @results.total.zero?
        .no-results
          %p No results to show
      - else
        .frame
          %p= page_entries_info @results, entry_name: 'result'

          %ul.list-unstyled.search-results
            - @results.each do |result|
              %li= link_to result.name, entity_path(result.id)

          %p= paginate @results
