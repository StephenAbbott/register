= form_with form_options_for_entity(entity) do |f|
  = render 'submissions/shared/form_errors', errors: entity.errors if entity.errors.any?
  = render 'continue_params'
  = f.hidden_field :type
  = f.hidden_field :user_created
  .form-group
    = f.label :name, t('.name_label')
    = f.text_field :name, class: 'form-control form-control-lg', autofocus: true
    %small= t('.name_hint')
  %hr
  .form-group
    = f.label :company_number
    = f.text_field :company_number, class: 'form-control'
  .form-group
    = f.label :jurisdiction_code, t('.jurisdiction_code_label')
    = f.select :jurisdiction_code, jurisdictions_for_select(entity.jurisdiction_code), { prompt: '' }, class: 'form-control'
  .form-group
    = f.label :incorporation_date
    = f.date_field :incorporation_date, placeholder: 'YYYY-MM-DD', class: 'form-control'
  .form-group
    = f.label :address, t('.address_label')
    = f.text_field :address, class: 'form-control'
    %small= t('.address_hint')
  .form-group
    = f.button t('.continue'), class: 'btn btn-primary'
