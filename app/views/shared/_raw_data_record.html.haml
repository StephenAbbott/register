.row.raw_data_record{ id: "raw_data_record_#{raw_record.etag}" }
  .col-lg-8
    .raw-data-records
      %pre.pre-scrollable= JSON.pretty_generate(JSON.parse(raw_record.raw_data))
  .col-lg-4
    .frame-light.meta
      .frame-wrap
        %h6= t("raw_data_records.show.data_sources")
        %p= raw_record.data_sources.map(&:name).to_sentence
        %h6= t("raw_data_records.show.seen_in_most_recent_import")
        %p= humanize_boolean(@latest_imports[last_data_source.id.to_s] <= raw_record.updated_at)
        %h6= t("raw_data_records.show.last_seen")
        %p= raw_record.updated_at
        %h6= t("raw_data_records.show.first_seen")
        %p= raw_record.created_at
        %h6= t("raw_data_records.show.fields.etag")
        %p
          %code= raw_record.etag
