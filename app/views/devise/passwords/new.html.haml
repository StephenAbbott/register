- content_for(:title, t(".title"))

.content.form-content
  .container-fluid
    .row
      .col-lg-6.offset-lg-3
        .frame-light
          .frame-wrap
            %header
              %h1= t(".header")

            = form_with model: resource, url: password_path(resource_name), method: :post, local: true do |f|
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, autofocus: true, autocomplete: 'email', id: "#{resource_name}_email", class: 'form-control form-control-lg'
              .actions
                = f.submit t(".submit"), class: 'btn btn-primary btn-lg btn-block'
            = render "devise/shared/links"
