.alt-signin-links
  - if controller_name != 'sessions'
    = link_to t(".new_session"), new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t(".new_registration"), new_registration_path(resource_name)
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t(".new_password"), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t(".new_confirmation"), new_confirmation_path(resource_name)
