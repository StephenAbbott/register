{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "quote-props": ["error", "consistent-as-needed"],
        "no-param-reassign": ["error", { "props": false }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["app/javascript"]
            }
        }
    }
}
